<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mx.cam.common.user.dao.UserGroupDao">
    				 
    <select id="checkUserGroupId" resultType="com.mx.cam.common.user.model.Group">
		SELECT DISTINCT B.group_name from te_group_user A, te_group B
		WHERE A.group_id = B.group_id
		AND A.group_id in 
 		<foreach  item="item" collection="array" open="(" separator=","  close=")">
			#{item}
		</foreach>
	</select>
    
    <insert id="saveUserGroup">
    	INSERT INTO te_group_user(
    		user_id,
    		group_id
    	)
    	VALUES
    	<foreach collection="array" item="item" index="index"  separator=",">  
        ( 
            #{userID},
            #{item}
        )
        </foreach>
    </insert>
    
     <update id="deleteUserGroup">
    	DELETE FROM te_group_user
    	    WHERE user_id = #{user_id}
    </update>
    
</mapper>
