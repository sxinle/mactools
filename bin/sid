#!/bin/bash

yellow='\033[1;33m'
normal='\033[0m'

echo -e "\n${yellow}================  sync folder/util/ ... ================\n${normal}"
cd ~/folder/util/mactools
if [ $1x = "a"x ] ; then
    git add . && git commit -am "update config" && git push origin master
else
    git status&&git pull
fi 

echo -e "\n${yellow}================  sync .vim/dotvim/ ... ================\n${normal}"
cd ~/.vim/dotvim
if [ $1x = "a"x ] ; then
    git add . && git commit -am "cmt" && git push origin master
else
    git status && git pull 
fi 

echo -e "\n${yellow}================  sync ~/.ssh/ ... ================\n${normal}"
cd ~/.vim/dotvim
if [ $1x = "a"x ] ; then
    git add . && git commit -am "cmt" && git push origin master
else
    git status && git pull 
fi 

cd ~


